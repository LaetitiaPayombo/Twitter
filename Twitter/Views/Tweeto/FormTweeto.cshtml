@model Tweeto
<h1>Ajouter un commentaire</h1>

@if (ViewBag.Message != null)
{
    <div class="row m-1 justify-content-center align-items-center">
        <div class="col-6 alert alert-danger p-1">
            @ViewBag.message
        </div>
    </div>
}



<form asp-controller="Tweeto" enctype="multipart/form-data" asp-action="SubmitFormTweeto" method="post">
    <div class="form-group">
        <label for="Titre">Titre :</label>
        <input type="text" name="Title" class="form-control" asp-for="@Model.Title" id="Titre" placeholder="Titre du commentaire">
    </div>
    
    <div class="form-group">
        <label for="Description">Commentaire :</label>
        <textarea name="Description" class="form-control" asp-for="@Model.Description" id="Description" placeholder="Commentaire"></textarea>
    </div>
    <div class="form-group">
        <label for="Classement">Sujet:</label>
        <select name="ClassementId" id="Classement" class="form-control" asp-for="@Model.ClassementId" aria-label="Sujet du commentaire">
            @foreach (Classement c in ViewBag.Classements)
            {
                <option value="@c.Id">@c.Title</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Images">Images :</label>
        <input multiple type="file" name="images" class="form-control" id="Images" />
    </div>
    <button type="submit" class="btn btn-primary col">Ajouter</button>
</form>